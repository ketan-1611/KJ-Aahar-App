<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".activity.Activity.AboutActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvAbout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="About Us"
                android:textSize="28sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:padding="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

            <ImageView
                android:id="@+id/ivAbout"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/aahar"
                android:layout_marginTop="20dp"
                android:scaleType="centerCrop"
                android:padding="10dp"
                app:layout_constraintTop_toBottomOf="@+id/tvAbout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <TextView
                android:id="@+id/tvDescAbout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/aboutDesc"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:padding="8dp"
                android:layout_margin="16dp"
                app:layout_constraintTop_toBottomOf="@+id/ivAbout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardInstagram"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:clickable="true"
                android:backgroundTint="@color/grey"
                app:cardCornerRadius="12dp"
                app:cardElevation="5dp"
                android:layout_margin="16dp"
                app:layout_constraintTop_toBottomOf="@+id/tvDescAbout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/ivInstagram"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/instagram"
                        android:layout_marginStart="40dp"
                        android:layout_marginEnd="10dp"
                        app:tint="@color/white"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        />

                    <TextView
                        android:id="@+id/tvInstagram"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Instagram"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_marginTop="8dp"
                        android:padding="3dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        />



                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardFacebook"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:clickable="true"
                android:backgroundTint="@color/grey"
                app:cardCornerRadius="12dp"
                app:cardElevation="5dp"
                android:layout_margin="16dp"
                app:layout_constraintTop_toBottomOf="@+id/cardInstagram"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/ivFacebook"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/facebook"
                        android:layout_marginStart="40dp"
                        android:layout_marginEnd="10dp"
                        app:tint="@color/white"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        />

                    <TextView
                        android:id="@+id/tvFacebook"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Facebook"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_marginTop="8dp"
                        android:padding="3dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        />



                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardTwitter"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:clickable="true"
                android:backgroundTint="@color/grey"
                app:cardCornerRadius="12dp"
                app:cardElevation="5dp"
                android:layout_margin="16dp"
                app:layout_constraintTop_toBottomOf="@+id/cardFacebook"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/ivTwitter"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/twitter"
                        android:layout_marginStart="40dp"
                        android:layout_marginEnd="10dp"
                        app:tint="@color/white"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        />

                    <TextView
                        android:id="@+id/tvTwitter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Twitter"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_marginTop="8dp"
                        android:padding="3dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        />



                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Version 1.0.0"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/cardTwitter"
                app:layout_constraintStart_toStartOf="@+id/cardTwitter"
                app:layout_constraintEnd_toEndOf="@+id/cardTwitter"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>






</androidx.constraintlayout.widget.ConstraintLayout>